{
  "id": "A01",
  "fn": "docs/specs/A01_IA_Sitemap.tok.json",
  "t": "Information Architecture (IA) & Sitemap",
  "v": "0.3.0",
  "st": "draft",
  "own": ["product", "ux", "eng"],
  "src": {
    "md": "docs/specs/A01_IA_Sitemap.md"
  },
  "rel": [
    {
      "doc": "A00",
      "why": "Authoritative as-is route inventory (static + dynamic route patterns)."
    },
    {
      "doc": "C01",
      "why": "Locale-prefix canonical routing rules and switcher expectations."
    },
    {
      "doc": "A04",
      "why": "Header navigation is implemented as-is; IA defines target canonical model."
    },
    {
      "doc": "D01",
      "why": "Collections are backed by headless WordPress; IA maps indexes and detail pages."
    },
    {
      "doc": "E03",
      "why": "Footer includes manage cookies entry; depends on consent behavior."
    }
  ],
  "body": {
    "conventions": {
      "locale_prefix_required": true,
      "canonical_pattern": "/{locale}/...",
      "ref": { "doc": "C01", "sec": "routing" }
    },
    "nav": {
      "header": {
        "items": [
          {
            "key": "why_el_salvador",
            "href": "/why-el-salvador",
            "i18n_key": "nav.why_el_salvador"
          },
          {
            "key": "why_invest",
            "href": "/why-invest",
            "i18n_key": "nav.why_invest"
          },
          {
            "key": "how_to_invest",
            "href": "/how-to-invest",
            "i18n_key": "nav.how_to_invest"
          },
          {
            "key": "sectors",
            "href": "/sectors",
            "i18n_key": "nav.sectors"
          },
          {
            "key": "success_stories",
            "href": "/success-stories",
            "i18n_key": "nav.success_stories"
          },
          {
            "key": "news_events",
            "href": "/news",
            "i18n_key": "nav.news_events",
            "note": "Events exist at /events; header currently links only to /news."
          },
          {
            "key": "about",
            "href": "/about",
            "i18n_key": "nav.about"
          },
          {
            "key": "contact",
            "href": "/contact",
            "i18n_key": "nav.contact",
            "cta": true
          }
        ],
        "ref": { "doc": "A04", "sec": "navigation model (as-is)" }
      },
      "footer": {
        "legal": [
          {
            "key": "accessibility",
            "href": "/legal/accessibility",
            "i18n_key": "footer.legal.accessibility"
          },
          {
            "key": "cookies",
            "href": "/legal/cookies",
            "i18n_key": "footer.legal.cookies"
          },
          {
            "key": "privacy",
            "href": "/legal/privacy",
            "i18n_key": "footer.legal.privacy"
          },
          {
            "key": "terms",
            "href": "/legal/terms",
            "i18n_key": "footer.legal.terms"
          }
        ],
        "utility": [
          {
            "key": "manage_cookies",
            "action": "open_cookie_settings",
            "ref": { "doc": "E03", "sec": "manage_cookies" }
          }
        ]
      }
    },
    "inventory": {
      "derived_from": { "doc": "A00", "sec": "files" },
      "static": [
        "/",
        "/about",
        "/about/governance",
        "/about/team",
        "/why-el-salvador",
        "/why-el-salvador/connectivity",
        "/why-el-salvador/macroeconomy",
        "/why-el-salvador/quality-of-life",
        "/why-el-salvador/talent",
        "/why-invest",
        "/why-invest/incentives",
        "/why-invest/services",
        "/how-to-invest",
        "/how-to-invest/steps",
        "/how-to-invest/requirements",
        "/how-to-invest/faqs",
        "/insights",
        "/insights/reports",
        "/media",
        "/media/downloads",
        "/media/gallery",
        "/contact",
        "/contact/invest-support",
        "/legal/accessibility",
        "/legal/cookies",
        "/legal/privacy",
        "/legal/terms"
      ],
      "collections": [
        {
          "name": "news",
          "index": "/news",
          "detail": "/news/{slug}",
          "param": "slug"
        },
        {
          "name": "events",
          "index": "/events",
          "detail": "/events/{slug}",
          "param": "slug"
        },
        {
          "name": "reports",
          "index": "/insights/reports",
          "detail": "/insights/reports/{slug}",
          "param": "slug"
        },
        {
          "name": "sectors",
          "index": "/sectors",
          "detail": "/sectors/{sectorSlug}",
          "param": "sectorSlug"
        },
        {
          "name": "success_stories",
          "index": "/success-stories",
          "detail": "/success-stories/{storySlug}",
          "param": "storySlug"
        }
      ],
      "cms_ref": { "doc": "D01", "sec": "collections" }
    },
    "open": [
      {
        "q": "Should 'news_events' become a dropdown or be split (news + events)?",
        "refs": [
          { "doc": "A04", "sec": "spec_debt" },
          { "doc": "A00", "sec": "route_patterns" }
        ]
      },
      {
        "q": "Should /insights be promoted to header navigation?",
        "refs": [{ "doc": "A00", "sec": "files" }]
      },
      {
        "q": "Should /media remain a top-level nav item or footer-only?",
        "refs": [{ "doc": "A00", "sec": "files" }]
      }
    ]
  }
}
