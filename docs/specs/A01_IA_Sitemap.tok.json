  "rel": [
    {
      "doc": "A00",
      "why": "As-is route inventory is the authoritative input for page list and patterns."
    },
    {
      "doc": "C01",
      "why": "Locale routing and translation workflow affect IA behavior and URL policy."
    },
    {
      "doc": "D01",
      "why": "Collections (news/events/reports/etc.) are expected to be CMS-driven."
    },
    {
      "doc": "E03",
      "why": "Footer/legal and cookie management link behavior depends on consent spec."
    },
    {
      "doc": "A02",
      "why": "Header/footer implementation details belong to layout components spec."
    }
  ],
  "body": {
    "url_policy": {
      "canonical": "/{locale}/...",
      "ref": {
        "doc": "A00",
        "sec": "route_patterns"
      }
    },
    "nav": {
      "header": [
        {
          "k": "why_es",
          "label": "Why El Salvador",
          "href": "/{locale}/why-el-salvador"
        },
        {
          "k": "why_invest",
          "label": "Why Invest",
          "href": "/{locale}/why-invest"
        },
        {
          "k": "how_to_invest",
          "label": "How to Invest",
          "href": "/{locale}/how-to-invest"
        },
        {
          "k": "sectors",
          "label": "Sectors",
          "href": "/{locale}/sectors"
        },
        {
          "k": "stories",
          "label": "Success Stories",
          "href": "/{locale}/success-stories"
        },
        {
          "k": "insights",
          "label": "Insights",
          "href": "/{locale}/insights"
        },
        {
          "k": "news_events",
          "label": "News & Events",
          "href": "/{locale}/news",
          "alt": [
            "/{locale}/events"
          ]
        },
        {
          "k": "media",
          "label": "Media",
          "href": "/{locale}/media"
        },
        {
          "k": "about",
          "label": "About",
          "href": "/{locale}/about"
        },
        {
          "k": "contact",
          "label": "Contact",
          "href": "/{locale}/contact"
        }
      ],
      "primary": [
        "Sectors",
        "Investors",
        "Success Stories",
        "News & Events",
        "About",
        "Contact"
      ],
      "footer": [
        {
          "k": "legal_accessibility",
          "label": "Accessibility",
          "href": "/{locale}/legal/accessibility"
        },
        {
          "k": "legal_cookies",
          "label": "Cookies",
          "href": "/{locale}/legal/cookies"
        },
        {
          "k": "legal_privacy",
          "label": "Privacy",
          "href": "/{locale}/legal/privacy"
        },
        {
          "k": "legal_terms",
          "label": "Terms",
          "href": "/{locale}/legal/terms"
        },
        {
          "k": "manage_cookies",
          "label": "Manage cookies",
          "href": "TBD",
          "ref": {
            "doc": "E03",
            "sec": "banner"
          }
        }
      ],
      "footer_links": [
        "Privacy",
        "Terms",
        "Manage Cookies (Consent)",
        "Social Links"
      ]
    },
    "pages": {
      "static": [
        "/{locale}/",
        "/{locale}/about",
        "/{locale}/about/governance",
        "/{locale}/about/team",
        "/{locale}/why-el-salvador",
        "/{locale}/why-el-salvador/connectivity",
        "/{locale}/why-el-salvador/macroeconomy",
        "/{locale}/why-el-salvador/quality-of-life",
        "/{locale}/why-el-salvador/talent",
