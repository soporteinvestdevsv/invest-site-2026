    },
    {
      "doc": "B00",
      "why": "Header/Footer and privacy components exist under components/."
    },
    {
      "doc": "A01",
      "why": "Header/footer navigation must align to IA sitemap."
    },
    {
      "doc": "C01",
      "why": "Locale switcher behavior and locale rules."
    },
    {
      "doc": "E03",
      "why": "Cookie banner and script gating behavior."
    },
    {
      "doc": "A03",
      "why": "UI Design Tokens for colors and typography."
    },
    {
      "doc": "A04",
      "why": "Detailed specifications for the sticky navigation header."
    }
  ],
  "body": {
    "as_is": {
      "header": "components/layout/Header.tsx",
      "footer": "components/layout/Footer.tsx",
      "cookie_banner": "components/privacy/CookieBanner.tsx",
      "consent_scripts": "components/privacy/ConsentScripts.tsx",
      "root_layout": "app/layout.tsx",
      "locale_layout": "app/(routes)/[locale]/layout.tsx"
    },
    "layout_model": {
      "shell": [
        "Header",
        "Main",
        "Footer"
      ],
      "global_once": [
        "ConsentScripts",
        "CookieBanner"
      ],
      "landmarks": [
        "header",
        "main",
        "footer"
      ],
      "skip_link": true
    },
    "header": {
      "spec": "A04",
      "nav_ref": {
        "doc": "A01",
        "sec": "nav.header"
      },
      "locale_switcher": {
        "enabled": true,
        "preserve_path": true,
        "missing_translation_behavior": "TBD",
        "ref": {
          "doc": "C01",
          "sec": "ui.locale_switcher"
        }
      },
      "responsive": {
        "mobile_menu": "collapsible",
        "desktop_menu": "horizontal"
      },
      "a11y": {
        "keyboard": true,
        "focus_management": true
      }
    },
    "footer": {
      "legal_links": [
        "/{locale}/legal/accessibility",
        "/{locale}/legal/cookies",
        "/{locale}/legal/privacy",
        "/{locale}/legal/terms"
      ],
      "manage_cookies": {
        "entry": true,
        "behavior": "TBD",
        "ref": {
          "doc": "E03",
          "sec": "banner"
        }
      }
    },
    "consent": {
      "banner": {
        "show_when": "missing_or_invalid_cookie",
        "ref": {
          "doc": "E03",
          "sec": "banner"
        }
      },
      "scripts": {
        "gating": true,
        "ref": {
          "doc": "E03",
          "sec": "script_gating"
        }
      }
    },
    "req": [
      {
