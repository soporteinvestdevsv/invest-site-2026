          "param": "slug",
          "src": "cms",
          "ref": {
            "doc": "A00",
            "sec": "collections"
          }
        },
        {
          "k": "sectors",
          "index": "/{locale}/sectors",
          "detail": "/{locale}/sectors/{sectorSlug}",
          "param": "sectorSlug",
          "src": "cms",
          "ref": {
            "doc": "A00",
            "sec": "collections"
          }
        },
        {
          "k": "success_stories",
          "index": "/{locale}/success-stories",
          "detail": "/{locale}/success-stories/{storySlug}",
          "param": "storySlug",
          "src": "cms",
          "ref": {
            "doc": "A00",
            "sec": "collections"
          }
        }
      ]
    },
    "open": []
  }
}