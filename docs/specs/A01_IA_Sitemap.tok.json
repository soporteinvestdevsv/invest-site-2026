      "collections": [
        {
          "k": "news",
          "index": "/{locale}/news",
          "detail": "/{locale}/news/{slug}",
          "param": "slug",
          "src": "cms",
          "ref": {
            "doc": "A00",
            "sec": "collections"
          }
        },
        {
          "k": "events",
          "index": "/{locale}/events",
          "detail": "/{locale}/events/{slug}",
